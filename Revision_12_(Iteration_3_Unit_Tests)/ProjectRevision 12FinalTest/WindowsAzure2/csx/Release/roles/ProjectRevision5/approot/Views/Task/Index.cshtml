@model IEnumerable<ProjectRevision5.Models.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Row
        </th>
        <th>
            Task
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Predecessor
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Row_ID)
        </td>
        <td>
            <div class="keepwhitespaces">@Html.DisplayFor(modelItem => item.Task_Name)</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Predecessor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Row_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Row_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Row_ID }) |
            @Html.ActionLink("Insert", "Insert", new { id=item.Row_ID }) |
            @Html.ActionLink("<<<", "TabLeft", new { id=item.Row_ID }) |
            @Html.ActionLink(">>>", "TabRight", new { id = item.Row_ID })
            @*<a href="@Url.Action("TabLeft", "Task", new { id = item.Row_ID })">
                <img src="@Url.Content("~/Content/themes/base/images/leftarrow.png")" alt="Indent Left" /> |
            <a href="@Url.Action("TabRight", "Task", new { id = item.Row_ID })">
                <img src="@Url.Content("~/Content/themes/base/images/rightarrow.png")" alt="Indent Right" />
            </a>*@
        </td>
    </tr>
}

</table>