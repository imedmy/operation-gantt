
@{
    ViewBag.Title = "ChooseCities";
    string Country1 = ViewBag.FirstCountry;
}


<h2>Please Choose 2 Locations</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Location 1</legend>

        <h4>Country: @ViewBag.FirstCountry</h4>
        @Html.Hidden("FirstCountry", (object)Country1)
        <div class="editor-field">
            <b>City</b> @Html.DropDownList("FirstCity") 
        </div>

       
        <p>
            <input type="submit" value="Continue" />
        </p>

        

    </fieldset>
    
    <fieldset>
        <legend>Location 2</legend>



        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Start", "Insert1", "Distance")
</div>


