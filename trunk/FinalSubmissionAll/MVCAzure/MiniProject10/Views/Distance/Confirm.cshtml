@{
    ViewBag.Title = "ChooseCities";
    // string Country1 = ViewBag.FirstCountry;
}


<h2>Please Choose 2 Locations</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Location 1</legend>

        <h2>Country: @ViewBag.FirstCountry</h2>
        <h2>City: @ViewBag.FirstCity</h2>

    </fieldset>
    
    <fieldset>
        <legend>Location 2</legend>

        <h2>Country: @ViewBag.SecondCountry</h2>
        <h2>City: @ViewBag.SecondCity</h2>
        
        <p>
            <input type="submit" value="Calculate Distance" />
        </p>

        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Start", "ChooseCities1", "Distance")
</div>


