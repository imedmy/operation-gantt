@model System.DateTime ?
@Html.TextBox("", (Model.HasValue ? Model.Value.ToShortDateString() : string.Empty), new { @class = "pickDate" })


<script type="text/javascript">
    $(document).ready(function () {

        $('.pickDate').datepicker({
            dateFormat: "dd/mm/yy",            // if omitted goes to US format
            changeMonth: true,                  // displays change of month box
            changeYear: true                    // displays change of year box
        });
    });
</script>
